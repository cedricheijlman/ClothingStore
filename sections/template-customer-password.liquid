<section class="w-full flex justify-center flex-row" x-data="{ loginForm: true, pwRecoverForm: false}">

  <section x-show="loginForm">
    {% form 'reset_customer_password' %}


      <h1 class="text-[34px] font-bold mt-12 mb-5 uppercase">Reset your password</h1>

      {% if form.errors %}

        <section class="bg-red-100 border-red-400 text-red-700 px-4 py-3" role="alert">
          <strong class="font-bold">Error!</strong>
          <p class="block sm:inline">{{ form.errors | default_errors }}</p>
        </section>

      {% endif %}



      <section>

        <input
          class="border w-full p-2 my-1"
          placeholder="Password"
          type="password"
          name="customer[password]"
          id="password"
          autocomplete="password" />
      </section>

      <section>

        <input
          class="border w-full p-2 my-1"
          placeholder="Confirm your password"
          type="password"
          name="customer[password_confirmation]"
          id="password_confirmation"
          autocomplete="password" />
      </section>

      <button class="w-full bg-gray-700 text-white p-2 my-3 uppercase font-bold" type="submit">Reset Password</button>


    {% endform %}
  </section>



</section>